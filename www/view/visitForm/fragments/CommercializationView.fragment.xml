<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Table
		items="{ path: '/View_Visit_Commercialization', sorter : { path : 'HCP_COMMERCIALIZATION_ID', descending:true }}"
		width="auto" showSeparators="All" growing="true" growingThreshold="5" growingScrollToLoad="true" class="sapUiResponsiveMargin sapUiSizeCompact" id="tableCommecializationTab" fixedLayout="false">
		<infoToolbar>
			<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
				<content>
					<Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
				</content>
			</Toolbar>
		</infoToolbar>
		<headerToolbar>
			<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
				<content>
					<ToolbarSpacer/>
					<OverflowToolbarButton text="Sort" press="sortCommercializationButtonPressed" type="Transparent" icon="sap-icon://sort" iconFirst="true" width="auto"
						enabled="true" visible="true" iconDensityAware="false"/>
					<OverflowToolbarButton text="Filter" press="filterCommercializationButtonPressed" type="Transparent" icon="sap-icon://filter" iconFirst="true" width="auto"
						enabled="true" visible="true" iconDensityAware="false"/>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<header>
					<Text text="{i18n>textIDCommercialization}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
				</header>
				<footer/>
			</Column>
			<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Small" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<header>
					<Text text="{i18n>textVendorProspect}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
				</header>
				<footer/>
			</Column>
			<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<header>
					<Text text="{i18n>textTypeCommercialization}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
				</header>
				<footer/>
			</Column>
			<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<header>
					<Text text="{i18n>textDateCreation}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
				</header>
				<footer/>
			</Column>
			<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
				<header>
					<Text text="{i18n>textUser}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
				</header>
				<footer/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Active" press="_onRowPress">
				<cells>
					<ObjectIdentifier title="{= ${NAME_LIFNR} !== null ? ${NAME_LIFNR} : ${NAME_PROSPECT} }"/>
					<Text text="{HCP_CONTACT_INICIATIVE}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
					<Text
						text="{ path: 'HCP_CREATED_AT', type: 'sap.ui.model.type.DateTime', formatOptions: { style: 'full', UTC: false, pattern: 'dd/MM/yyyy HH:mm:ss' } }"
						maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
					<Text text="{HCP_CREATED_BY}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>