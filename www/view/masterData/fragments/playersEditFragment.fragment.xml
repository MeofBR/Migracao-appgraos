<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
	xmlns:custom="com.sap.build.standard.brfAppDeGraosModoEditar.controls">
	<Dialog horizontalScrolling="true" showHeader="true" state="None" stretch="false" title="{i18n>editBuyers}" type="Standard"
		verticalScrolling="true">
		<content>
			<Panel width="auto">
				<form:SimpleForm class="simpleFormCommerc" editable="true" id="formPrice" maxContainerCols="1">
					<form:content>
						
						
						<Label text="{i18n>buyerName}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
						<Input value="{playersModel>/HCP_NAME}" placeholder="{i18n>BuyerRegion}" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto"
							valueHelpOnly="false" valueStateText="Invalid entry" maxLength="0" change="_validateForm" liveChange="_validateForm"/>
						
						<Label text="{i18n>state}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
									<custom:CustomComboBox
										items="{ path: '/View_States', length: 999999 ,filters: {path: 'LAND1', operator: 'EQ', value1: 'BR'} , sorter: { path: 'BLAND',descending: false} }"
										placeholder="{i18n>selectState}" editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%"
										selectedKey="{playersModel>/HCP_STATE}" selectionChange="_validateForm">
										<custom:items>
											<core:Item text="{BLAND} - {BEZEI}" enabled="true" key="{BLAND}"/>
										</custom:items>
									</custom:CustomComboBox> 
						
						<Label text="{i18n>channel}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
						<Input value="{playersModel>/HCP_CANAL}" placeholder="{i18n>entertheChannel}" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto"
							valueHelpOnly="false" valueStateText="Invalid entry" maxLength="0" change="_validateForm" liveChange="_validateForm"/>
						
						<Label text="{i18n>consumptionMonthly}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
						<Input value="{playersModel>/HCP_CONSUMO}" placeholder="{i18n>unidade}" type="Number" showValueHelp="false" enabled="true" visible="true" width="auto"
							valueHelpOnly="false" valueStateText="Invalid entry" maxLength="0" change="_validateForm" liveChange="_validateForm"/>
	
					</form:content>
				</form:SimpleForm>
			</Panel>
		</content>
		<beginButton/>
		<buttons>
			<Button text="Cancelar" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
				press="_onDialogPlayersCancelPress"/>
		
				<Button text="Editar" type="Emphasized" iconFirst="true" width="auto" enabled="{filterPageModel>/enableCreate}" visible="{filterPageModel>/enableEditButton}"
				iconDensityAware="false" press="_onEdit"/>
		</buttons>
		<customHeader/>
		<endButton/>
		<subHeader/>
	</Dialog>
</core:FragmentDefinition>