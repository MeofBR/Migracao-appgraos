<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
	xmlns:custom="com.sap.build.standard.brfAppDeGraosModoEditar.controls">
	<Dialog horizontalScrolling="true" showHeader="true" state="None" stretch="false" title="Adicionar Região" type="Standard"
		verticalScrolling="true">
		<content>
			<Panel width="auto">
				<form:SimpleForm class="simpleFormCommerc" editable="true" id="formPrice" maxContainerCols="1">
					<form:content>
						<Label text="Estado" class="marginTop" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
						<custom:CustomComboBox id="Estado" name="STATEModal" class="sapUiTinyMarginTop" width="100%"
							items="{ path: '/View_States', length: 999999 , filters: {path: 'LAND1', operator: 'EQ', value1: 'BR'}, sorter: { path: 'BEZEI',descending: false}}" placeholder="Selecione o Estado"
							selectedKey="{regionFormModel>/HCP_BLANDMODAL}" editable="true" enabled="true" visible="true" valueState="None" liveChange="_validateForm" change="_validateForm">
							<custom:items>
								<core:Item text="{BLAND} - {BEZEI}" enabled="true" key="{BLAND}"/>
							</custom:items>
						</custom:CustomComboBox>
						<Label text="Região" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
						<Input value="{regionFormModel>/HCP_BEZEI}" placeholder="Digite o nome da Regiao" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto"
							valueHelpOnly="false" valueStateText="Invalid entry" maxLength="0" change="_validateForm" liveChange="_validateForm"/>
					</form:content>
				</form:SimpleForm>
			</Panel>
		</content>
		<buttons>
			<Button text="Cancelar" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
				press="_onDialogTablePricCancelPress"/>
			<Button text="Confirmar" type="Emphasized" iconFirst="true" width="auto" enabled="{filterPageModel>/enableCreate}" visible="{filterPageModel>/enableCreateButton}"
				iconDensityAware="false" press="_onSave"/>
				
			<Button text="Editar" type="Emphasized" iconFirst="true" width="auto" enabled="{filterPageModel>/enableCreate}" visible="{filterPageModel>/enableEditButton}"
				iconDensityAware="false" press="_onEdit"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>