<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.brfAppDeGraosModoEditar.controller.crop.Consult" xmlns="sap.m">
	<Page title="Consultar Acompanhamentos" showNavButton="true" navButtonPress="backToIndex" showFooter="true">
		<content>
			<PullToRefresh id="pullToRefreshID" visible="{consultModel>/isMobile}" refresh="refreshData"/>
			<Table width="auto" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true" class="sapUiResponsiveMargin"
				id="table" items="{consultModel>/crop_tracks}" updateFinished="onUpdateFinished" itemPress="onCropPress">
				<infoToolbar>
					<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
						<content>
							<Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</content>
					</Toolbar>
				</infoToolbar>
				<headerToolbar>
					<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
						<content>
							<Title text="{consultModel>/cropCount} Acompanhamentos" titleStyle="Auto" width="auto" textAlign="Begin" visible="true" wrapping="false"/>
							<ToolbarSpacer/>
							<OverflowToolbarButton text="Sort" press="sortButtonPressed" type="Transparent" icon="sap-icon://sort" iconFirst="true" width="auto"
								enabled="true" visible="true" iconDensityAware="false"/>
							<OverflowToolbarButton text="Filter" press="filterButtonPressed" type="Transparent" icon="sap-icon://filter" iconFirst="true" width="auto"
								enabled="true" visible="true" iconDensityAware="false"/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Código" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Safra - Semana" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Estado" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="250px" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Região" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="400px" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Material" width="auto" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Right" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Data Criação" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Right" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Criado Por" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Active" press="_onRowPress">
						<cells>
							<ObjectIdentifier title="{consultModel>HCP_CROP_TRACK_ID}"/>
							<Text text="{consultModel>Crop_Track_Crop_Year/HCP_CROP_DESC} - {= ${consultModel>HCP_PERIOD}.slice(0, 2)}" width="auto" maxLines="1"
								wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							<ObjectAttribute text="{consultModel>HCP_STATE}"/>
							<Text text="{consultModel>Crop_Track_Region/HCP_BEZEI}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"
								visible="true"/>
							<Text text="{= parseInt(${consultModel>HCP_MATERIAL})} - {consultModel>Crop_Track_Material/MAKTX}" width="auto" wrapping="true"
								textAlign="Begin" textDirection="Inherit" visible="true"/>
							<Text
								text="{ path: 'consultModel>HCP_CREATED_AT', type: 'sap.ui.model.type.Date', formatOptions: { style: 'short', UTC: true, pattern: 'dd/MM/yyyy' } }"
								wrapping="false" textAlign="Right" textDirection="Inherit" visible="true"/>
							<Text text="{consultModel>HCP_CREATED_BY}" width="auto" wrapping="false" textAlign="Right" textDirection="Inherit" visible="true"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>