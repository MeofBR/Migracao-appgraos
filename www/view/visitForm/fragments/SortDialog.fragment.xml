<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<ResponsivePopover title="Ordenação" placement="Bottom">
		<content>
			<form:Form width="100%" editable="true" visible="true">
				<form:title/>
				<form:formContainers>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Coluna" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<RadioButtonGroup id="group_column" selectedIndex="4">
									<buttons>
										<RadioButton id="HCP_PROVIDER_ID" text="Fornecedor/Prospect" />
										<RadioButton id="HCP_CONTACT_TYPE" text="Tipo do Contato" />
										<RadioButton id="HCP_CONTACT_INICIATIVE" text="Iniciativa do Contato" />
										<RadioButton id="HCP_VISIT_FORM" text="Ficha de Visita" />
										<RadioButton id="HCP_CREATED_AT" text="Data Criação" selected="true"/>
										<RadioButton id="HCP_CREATED_BY" text="Usuário" />
									</buttons>
								</RadioButtonGroup>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Tipo ordenação" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<RadioButtonGroup id="group_sort" selectedIndex="1">
									<buttons>
										<RadioButton id="ascending" text="Ascendente" />
										<RadioButton id="descending" text="Descendente" selected="true" />
									</buttons>
								</RadioButtonGroup>
							</form:FormElement>
								<form:FormElement visible="true">
								<form:fields>
										<Button text="Ordenar" type="Emphasized" press="submitSortList"/>
								</form:fields>
							</form:FormElement>
						</form:formElements>
						<form:title/>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
				</form:layout>
			</form:Form>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>