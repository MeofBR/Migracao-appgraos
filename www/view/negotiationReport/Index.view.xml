<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.brfAppDeGraosModoEditar.controller.negotiationReport.Index"
	xmlns="sap.m">
	<Page title="Relato de Negociação da Região" showNavButton="true" navButtonPress="navBack" showFooter="{indexModel>/isMobile}">
		<headerContent>
			<Button icon="sap-icon://home" tooltip="Home" press="_onHome" visible="true"/>
		</headerContent>
		<content>
			<List mode="None" width="100%" backgroundDesign="Solid" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true"
				visible="true">
				<items>
					<StandardListItem icon="sap-icon://search" title="Consultar/Criar" type="Navigation" press="_onListNegotiationReportPress"/>
					<StandardListItem icon="sap-icon://bar-chart" title="Relatórios" type="Navigation" press="_onReportFilterPress"/>
				</items>
			</List>
		</content>
		<footer>
			<OverflowToolbar id="otbFooter">
				<ToolbarSpacer/>
				<MessageStrip class="sapUiTinyMarginEnd" text="Ultima atualização {indexModel>/lastUpdate}" showIcon="true"></MessageStrip>
				<Button type="Emphasized" icon="sap-icon://synchronize" press="refreshData">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow"/></layoutData>
				</Button>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>