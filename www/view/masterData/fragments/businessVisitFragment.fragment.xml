<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
	xmlns:custom="com.sap.build.standard.brfAppDeGraosModoEditar.controls">
	<Dialog id="Dialog" horizontalScrolling="true" showHeader="true" state="None" stretch="false" title="{= ${businessVisitModel>/isEdit} === false ?  ${i18n>titleAddBusinessVisit} : ${i18n>titleEditBusinessVisit} }" type="Standard"
		verticalScrolling="true">
		<content>
			<Panel width="400px">
				<form:SimpleForm class="simpleFormCommerc" editable="true" id="formPrice" maxContainerCols="1">
					<form:content>
						<VBox>
							<Text text="{i18n>textDateRangeUsed}" class="textColorRed" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="{businessVisitModel>/isCreated}"/>
							
							<Label text="{i18n>textVisitDate}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
							<DatePicker id="monthYearDatePicker" value="{path: 'businessVisitModel>/oFormData/calendarDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MM/yyyy' }}"  enabled="{= ${businessVisitModel>/isEdit} ? false : true}" displayFormat="MM/yyyy" change="_validateDate" required="true" />
							
							<Label text="{i18n>textMonthCategory}" design="Standard" width="100%" textAlign="Begin" textDirection="Inherit" required="true" visible="true"/>
							<MultiComboBox id="multiComboBox"  placeholder="{i18n>textMonthCategory}" selectionChange="_validateForm" items="{/Ranking}" selectedKeys="{businessVisitModel>/oFormData/rankingADD}" required="true">
							  <core:Item key="{HCP_ID}" text="{HCP_NAME}" />
							</MultiComboBox>
						</VBox>
						
					</form:content>
				</form:SimpleForm>
			</Panel>
		</content>
		<beginButton/>
		<buttons>
			<Button text="{i18n>buttonCancel}" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
				press="_onClosePress"/>
			<Button text="{i18n>confirm}" type="Emphasized" iconFirst="true" width="auto" enabled="{businessVisitModel>/isSave}" visible="{= !${businessVisitModel>/isCreated}}" iconDensityAware="false"
				press="_onSave"/>
		</buttons>
		<customHeader/>
		<endButton/>
		<subHeader/>
	</Dialog>
</core:FragmentDefinition>