<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<ResponsivePopover title="{i18n>textOrdination}" placement="Bottom">
		<content>
			<form:Form width="100%" editable="true" visible="true">
				<form:title/>
				<form:formContainers>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement visible="true">
								<form:label>
									<Label text="{i18n>textColumn}" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<RadioButtonGroup id="group_column">
									<buttons>
										<RadioButton id="HCP_COMMERCIALIZATION_ID" text="{i18n>textIDCommercialization}" selected="true"/>
										<RadioButton id="HCP_PARTNER" text="{i18n>textVendorProspect}"/>
										<RadioButton id="HCP_TYPE_COMMERCIALIZATION" text="{i18n>textTypeCommercialization}"/>
										<RadioButton id="HCP_CREATED_AT" text="{i18n>textDateCreation}"/>
										<RadioButton id="HCP_CREATED_BY" text="{i18n>textUser}"/>
									</buttons>
								</RadioButtonGroup>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="{i18n>textTypeSorting}" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<RadioButtonGroup id="group_sort" selectedIndex="1">
									<buttons>
										<RadioButton id="ascending" text="{i18n>textAscending}" />
										<RadioButton id="descending" text="{i18n>textDescending}" selected="true"/>
									</buttons>
								</RadioButtonGroup>
							</form:FormElement>
								<form:FormElement visible="true">
								<form:fields>
										<Button text="{i18n>textOrder}" type="Emphasized" press="submitSortCommercializationList"/>
								</form:fields>
							</form:FormElement>
						</form:formElements>
						<form:title/>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
				</form:layout>
			</form:Form>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>