<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.brfAppDeGraosModoEditar.controller.prospects.Index"
	xmlns="sap.m">
	<Page title="Consulta Prospects" showNavButton="true" navButtonPress="_onCancel" showFooter="true">
			<headerContent>
			<Button icon="sap-icon://home" tooltip="Home" press="_onHome" visible="true" />
		</headerContent>
		<content>
			<Table width="auto" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true" class="sapUiResponsiveMargin"
				id="table"
				items="{ path: '/Prospects', sorter : { path : 'HCP_CREATED_AT' , descending:true }, parameters: { expand: 'Prosp_Characteristics,Prosp_Code,Prosp_Banks,Prosp_Irf' }}">
				<infoToolbar>
					<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
						<content>
							<Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</content>
					</Toolbar>
				</infoToolbar>
				<headerToolbar>
					<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
						<content>
							<Title text="Prospects ({prospects>/count})" titleStyle="Auto" width="auto" textAlign="Begin" visible="true" wrapping="false"/>
							<Title text="sUser({prospects>/user})" titleStyle="Auto" width="auto" textAlign="Begin" visible="false" wrapping="false"/>
							<Title text="E-mail ({prospects>/user2})" titleStyle="Auto" width="auto" textAlign="Begin" visible="false" wrapping="false"/>
							<ToolbarSpacer width=""/>
							<OverflowToolbarButton text="Sort" press="sortButtonPressed" type="Transparent" icon="sap-icon://sort" iconFirst="true" width="auto"
								enabled="true" visible="true" iconDensityAware="false"/>
							<OverflowToolbarButton text="Filter" press="filterButtonPressed" type="Transparent" icon="sap-icon://filter" iconFirst="true" width="auto"
								enabled="true" visible="true" iconDensityAware="false"/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Código" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Fornecedor" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="N.Solicitação" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Estado" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Data Criação" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Status" width="121px" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
						<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Criado Por" width="121px" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Active" press="_onRowPress">
						<cells>
							<Text text="{= ${Prosp_Code/HCP_CODE} ? ${Prosp_Code/HCP_CODE} : 'Registro Offline'}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							<ObjectAttribute text="{NAME1}"/>
							<Text text="{NRSOL}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							<Text text="{BLAND}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							<Text text="{ path: 'HCP_CREATED_AT', type: 'sap.ui.model.type.Date', formatOptions: { style: 'short', UTC: true, pattern: 'dd/MM/yyyy' } }"
								width="103px" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							<ObjectStatus class="sapUiSmallMarginBottom" text="{ path: 'HCP_STATUS', formatter: '.formatter.textStatusProspect' } {LIFNR}"
								state="{ path: 'HCP_STATUS', formatter: '.formatter.stateStatusProspect' }"
								icon="{ path: 'HCP_STATUS', formatter: '.formatter.iconStatusProspect' }"/>
							<Text text="{HCP_CREATED_BY}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>	
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<ToolbarSpacer width=""/>
					<MessageStrip class="sapUiTinyMarginEnd" visible="{indexModel>/isMobile}" text="Atualizado em {indexModel>/lastUpdate}" showIcon="false"></MessageStrip>
					<Button visible="{indexModel>/isMobile}" type="Emphasized" icon="sap-icon://synchronize" press="refreshData">
						<layoutData><OverflowToolbarLayoutData priority="NeverOverflow"/></layoutData>
					</Button>
					<Button type="Emphasized" visible="{indexModel>/isMobile}" icon="sap-icon://add" press="_onButtonPress1"/>
					<Button text="Cadastrar" type="Emphasized" iconFirst="true" width="120px" enabled="true" visible="{indexModel>/isWeb}" iconDensityAware="false"
						press="_onButtonPress1"/>
				</content>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>