<mvc:View xmlns:mvc="sap.ui.core.mvc"
	controllerName="com.sap.build.standard.brfAppDeGraosModoEditar.controller.negotiationReport.ReportFilter" xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:custom="com.sap.build.standard.brfAppDeGraosModoEditar.controls">
	<Page title="Selecione" showNavButton="true" navButtonPress="navBack" showFooter="true">
		<headerContent>
			<Button icon="sap-icon://home" tooltip="Home" press="_onHome" visible="true"/>
		</headerContent>
		<content>
			<f:SimpleForm class="editableForm" columnsL="1" columnsM="1" editable="true" emptySpanL="4" emptySpanM="4" id="NegotiationReportKeysForm"
				labelSpanL="3" labelSpanM="3" layout="ResponsiveGridLayout" maxContainerCols="2" minWidth="1024">
				<f:content>
					<Label text="Data Início/ Data Fim" design="Standard" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
					<DateRangeSelection placeholder="Data Início/Data Fim" dateValue="{reportFilterModel>/start_date}"
						secondDateValue="{reportFilterModel>/end_date}" width="auto" enabled="true" visible="true" change="_validateForm"/>
					<Label text="Estado" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
					<custom:CustomComboBox
						items="{ path: '/View_States', length: 999999 ,filters: {path: 'LAND1', operator: 'EQ', value1: 'BR'} , sorter: { path: 'BLAND',descending: false} }"
						placeholder="Selecione Estado" editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%"
						selectedKey="{reportFilterModel>/state}" selectionChange="_validateForm" change="_validateForm">
						<custom:items>
							<core:Item text="{BLAND} - {BEZEI}" enabled="true" key="{BLAND}"/>
						</custom:items>
					</custom:CustomComboBox>
				</f:content>
			</f:SimpleForm>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="auto" design="Auto" enabled="true" visible="true">
				<content>
					<ToolbarSpacer/>
					<Button text="Confirmar" type="Emphasized" iconFirst="true" width="auto" enabled="{reportFilterModel>/enableCreate}" visible="true"
						iconDensityAware="false" press="_onConfirm"/>
				</content>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>