<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form"
	xmlns:custom="com.sap.build.standard.brfAppDeGraosModoEditar.controls">
	<ResponsivePopover title="Filtro" placement="Bottom">
		<content>
			<form:Form width="100%" editable="true" visible="true">
				<form:title/>
				<form:formContainers>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Criado por" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input placeholder="Digite o usuário" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false"
										maxLength="0" value="{filters>/HCP_CREATED_BY}"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="false">
								<form:label>
									<Label text="Código" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input placeholder="Digite o código" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false"
										maxLength="0" value="{filters>/HCP_NEGO_REPORT_ID}"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Safra" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<custom:CustomComboBox items="{ path: '/Crop_Year', filters: [{path: 'HCP_ACTIVE', operator: 'EQ', value1: '1'}], length: 999999 , sorter: { path: 'HCP_CROP_ID',descending: false}}"
										placeholder="Selecione Safra" selectedKey="{filters>/HCP_CROP}" editable="true" enabled="true" visible="true" width="auto" valueState="None"
										maxWidth="100%">
										<custom:items>
											<core:Item text="{HCP_CROP_DESC}" enabled="true" key="{HCP_CROP_ID}"/>
										</custom:items>
									</custom:CustomComboBox>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Estado" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<custom:CustomComboBox
										items="{ path: '/View_States', sorter : { path : 'BLAND', descending: false }, filters: {path: 'LAND1', operator: 'EQ', value1: 'BR'}}"
										placeholder="Selecione Estado" selectedKey="{filters>/HCP_STATE}" editable="true" enabled="true" visible="true" width="auto"
										valueState="None" maxWidth="100%">
										<custom:items>
											<core:Item text="{BLAND} - {BEZEI}" enabled="true" key="{BLAND}"/>
										</custom:items>
									</custom:CustomComboBox>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Material" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<custom:CustomComboBox items="{ path: '/View_Material', length: 999999 , sorter: { path: 'MAKTX',descending: false} }"
										placeholder="Selecione Material" selectedKey="{filters>/HCP_MATERIAL}" editable="true" enabled="true" visible="true" width="auto"
										valueState="None" maxWidth="100%">
										<custom:items>
											<core:Item text="{= parseFloat(${MATNR}) } - {MAKTX}" enabled="true" key="{MATNR}"/>
										</custom:items>
									</custom:CustomComboBox>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Data Início/ Data Fim" design="Standard" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<DateRangeSelection placeholder="Data Início/Data Fim" dateValue="{filters>/start_date}" secondDateValue="{filters>/end_date}" width="auto"
										enabled="true" visible="true"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:fields>
									<Button class="sapUiTinyMarginEnd sapUiTinyMarginTop" text="Pesquisar" type="Emphasized" press="submitFilterList"/>
								</form:fields>
							</form:FormElement>
						</form:formElements>
						<form:title/>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
				</form:layout>
			</form:Form>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>