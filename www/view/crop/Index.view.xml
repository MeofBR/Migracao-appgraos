<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.brfAppDeGraosModoEditar.controller.crop.Index" xmlns="sap.m">
	<Page title="Acompanhamento de Lavoura" showNavButton="true" navButtonPress="backToIndex" showFooter="true">
		<headerContent>
			<Button icon="sap-icon://home" tooltip="Home" press="_onHome" visible="true"/>
		</headerContent>
		<content>
			<!--<PullToRefresh id="pullToRefreshID" visible="{indexModel>/isMobile}" refresh="refreshData"/>-->
			<List mode="None" width="100%" backgroundDesign="Solid" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true"
				visible="true">
				<items>
					<StandardListItem icon="sap-icon://add" title="Criar/Editar" type="Navigation" press="onCreateOrEditCrop"/>
					<StandardListItem icon="sap-icon://bar-chart" title="Consultar" type="Navigation" press="onConsult" visible="true"/>
					<StandardListItem icon="sap-icon://business-objects-experience" title="Extração Composta" type="Navigation" press="onComposeExtraction"
						visible="{indexModel>/enableComposeReport}"/>
				</items>
			</List>
		</content>
		<footer>
			<OverflowToolbar id="otbFooter" visible="{indexModel>/isMobile}">
				<ToolbarSpacer/>
				<MessageStrip class="sapUiTinyMarginEnd" text="Atualizado em {indexModel>/lastUpdate}" showIcon="true"></MessageStrip>
				<Button type="Emphasized" icon="sap-icon://synchronize" press="refreshData">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow"/></layoutData>
				</Button>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>