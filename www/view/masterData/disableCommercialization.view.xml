<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.brfAppDeGraosModoEditar.controller.masterData.disableCommercialization"
	xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout">
	<Page showHeader="true" title="{i18n>textMasterData}" showFooter="{indexModel>/isMobile}" showNavButton="true" navButtonPress="backToIndex">
		<headerContent>
			<Button icon="sap-icon://home" tooltip="Home" press="_onHome" visible="true"/>
		</headerContent>
		<content>
			<VBox>
				<items>
					<Table id="table" width="auto"
						items="{/Disable_Commercialization}"
						noDataText="{i18n>textNoData}" mode="None" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true"
						class="sapUiResponsiveMargin">
						<infoToolbar>
							<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
								<content>
									<Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</content>
							</Toolbar>
						</infoToolbar>
						<headerToolbar>
							<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
								<content>
									<ToolbarSpacer width=""/>
									<Button text="{i18n>buttonSave}" press=".onSavePress" />
								</content>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column width="90%" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
								<header>
									<Text text="Tipos de Interação" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</header>
								<footer/>
							</Column>
							<Column hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
								<header>
									<Text text="{i18n>textActions}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</header>
								<footer/>
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Active">
								<cells>
									<Label text="{HCP_DESCRIPTION}" design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"
										visible="true"/>
									<Switch state="{= ${HCP_STATUS_COMMERCIALIZATION} === '1' ? true : false}" change="onToggleSwitch">
										<layoutData>
											<FlexItemData growFactor="1" />
										</layoutData>
									</Switch>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</items>
			</VBox>
		</content>
	</Page>
</mvc:View>