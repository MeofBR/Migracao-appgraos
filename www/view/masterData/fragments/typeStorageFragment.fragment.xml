<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
	xmlns:custom="com.sap.build.standard.brfAppDeGraosModoEditar.controls">
	<Dialog horizontalScrolling="true" showHeader="true" state="None" stretch="false" title="Adicionar Tipo de Armazenagem" type="Standard"
		verticalScrolling="true">
		<content>
			<Panel width="auto">
				<form:SimpleForm class="simpleFormCommerc" editable="true" id="formPrice" maxContainerCols="1">
					<form:content>
						<Label text="Tipo de Armazenagem" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
						<Input value="{typeStorageFormModel>/HCP_DESC}" placeholder="Digite o tipo de armazenagem" type="Text" showValueHelp="false"
							enabled="true" visible="true" width="auto" valueHelpOnly="false" valueStateText="Invalid entry" maxLength="0" change="_validateForm"
							liveChange="_validateForm"/>
						<Label text="Tipo de Visita" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
						<custom:CustomComboBox placeholder="Selecione o Tipo de Visita" selectedKey="{typeStorageFormModel>/HCP_TYPE}" editable="true"
							enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%" selectionChange="_validateForm">
							<custom:items>
								<core:Item text="Anual" enabled="true" key="Yearly"/>
								<core:Item text="Grãos" enabled="true" key="Grains"/>
								<core:Item text="Indústria" enabled="true" key="Industry"/>
								<core:Item text="Periódico" enabled="true" key="Periodic"/>
								
							
							</custom:items>
						</custom:CustomComboBox>
					</form:content>
				</form:SimpleForm>
			</Panel>
		</content>
		<buttons>
			<Button text="Cancelar" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
				press="_onDialogTablePricCancelPress"/>
			<Button text="Confirmar" type="Emphasized" iconFirst="true" width="auto" enabled="{filterPageModel>/enableCreate}"
				visible="{filterPageModel>/enableCreateButton}" iconDensityAware="false" press="_onSave"/>
			<Button text="Editar" type="Emphasized" iconFirst="true" width="auto" enabled="{filterPageModel>/enableCreate}"
				visible="{filterPageModel>/enableEditButton}" iconDensityAware="false" press="_onEdit"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>