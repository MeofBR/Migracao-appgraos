<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.brfAppDeGraosModoEditar.controller.commercialization.Index"
	xmlns="sap.m">
	<Page title="Comercialização" showNavButton="true" navButtonPress="backToIndex" showFooter="true">
		<headerContent>
			<Button icon="sap-icon://home" tooltip="Home" press="_onHome" visible="true"/>
		</headerContent>
		<content>
			<PullToRefresh id="pullToRefreshID" visible="{indexModel>/isMobile}" refresh="refreshData"/>
			<List mode="None" width="100%" backgroundDesign="Solid" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true"
				visible="true">
				<items>
					<StandardListItem icon="sap-icon://add" title="Criar/Editar" type="Navigation" press="onCreateOrEditCommercialization"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>