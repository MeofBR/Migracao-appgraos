<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:fb="sap.ui.comp.filterbar">
	<Dialog afterClose="onPartnerDialogClose" contentWidth="100%" title="Selecione o Centro">
		<fb:FilterBar reset="_onPartnerReset" search="_onCharacteristicsApplySearch" showClearButton="false" showRestoreButton="true" id="fbCharacteristics">
			<fb:filterItems>
				<fb:FilterItem label="Centro" name="WERKS">
					<fb:control>
						<Input type="Number"/>
					</fb:control>
				</fb:FilterItem>
				<fb:FilterItem label="Descrição" name="NAME1">
					<fb:control>
						<Input type="Text"/>
					</fb:control>
				</fb:FilterItem>
			</fb:filterItems>
		</fb:FilterBar>
		<List growing="true" id="popoverFragmentID" items="{ path: '/View_Center', sorter: { path: 'WERKS' } }" mode="SingleSelectMaster"
			includeItemInSelection="true" selectionChange="onCharPlantSelected">
			<StandardListItem title="{NAME1}" description="{WERKS}"/>
		</List>
		<buttons>
			<Button text="{i18n&gt;Cancelar}" width="auto" press="onPartnerDialogClose" type="Transparent"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>