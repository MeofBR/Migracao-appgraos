<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form"
	xmlns:custom="com.sap.build.standard.brfAppDeGraosModoEditar.controls">
	<ResponsivePopover title="Filtro" placement="Bottom">
		<content>
			<form:Form width="100%" editable="true" visible="true">
				<form:title/>
				<form:formContainers>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Estado" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<custom:CustomComboBox
										items="{ path: '/View_States', sorter : { path : 'BLAND', descending: false }, filters: {path: 'LAND1', operator: 'EQ', value1: 'BR'}}"
										placeholder="Selecione Estado" selectedKey="{filters>/HCP_STATE}" editable="true" enabled="true" visible="true" width="auto"
										valueState="None" maxWidth="100%">
										<custom:items>
											<core:Item text="{BLAND} - {BEZEI}" enabled="true" key="{BLAND}"/>
										</custom:items>
									</custom:CustomComboBox>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Tipo de Material" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<custom:CustomComboBox items="{ path: '/View_Material_Type', length: 999999 , sorter: { path: 'TPCEREAL',descending: false} }"
										placeholder="Selecione o Tipo de Material" selectedKey="{filters>/HCP_MATERIAL}" editable="true" enabled="true" visible="true" width="auto"
										valueState="None" maxWidth="100%">
										<custom:items>
											<core:Item text="{= (${TPCEREAL}) } - {DETPCEREAL}" enabled="true" key="{TPCEREAL}"/>
										</custom:items>
									</custom:CustomComboBox>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:fields>
									<Button class="sapUiTinyMarginEnd sapUiTinyMarginTop" text="Pesquisar" type="Emphasized" press="submitFilterList"/>
								</form:fields>
							</form:FormElement>
						</form:formElements>
						<form:title/>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
				</form:layout>
			</form:Form>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>