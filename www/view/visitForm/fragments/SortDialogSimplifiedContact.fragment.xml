<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<ResponsivePopover title="{i18n>textOrdination}" placement="Bottom">
		<content>
			<form:Form width="100%" editable="true" visible="true">
				<form:title/>
				<form:formContainers>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement visible="true">
								<form:label>
									<Label text="{i18n>textColumn}" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<RadioButtonGroup id="group_column">
									<buttons>
										<RadioButton id="HCP_STCD1" text="{i18n>lblCNPJCPF}" selected="true"/>
										<RadioButton id="HCP_PARTNER_NAME" text="{i18n>textProvider}"/>
										<RadioButton id="HCP_VISIT_FORM" text="{i18n>textVisitForm}"/>
										<RadioButton id="HCP_CONTACT" text="{i18n>lblContact}"/>
										<RadioButton id="HCP_UPDATED_AT" text="{i18n>lblLastContact}"/>
										<RadioButton id="HCP_RANK" text="Ranking"/>
										<RadioButton id="HCP_UPDATED_BY" text="{i18n>lblUsers}"/>
									</buttons>
								</RadioButtonGroup>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="{i18n>textTypeSorting}" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<RadioButtonGroup id="group_sort">
									<buttons>
										<RadioButton id="ascending" text="{i18n>textAscending}" selected="true"/>
										<RadioButton id="descending" text="{i18n>textDescending}"/>
									</buttons>
								</RadioButtonGroup>
							</form:FormElement>
								<form:FormElement visible="true">
								<form:fields>
									<Button text="{i18n>textOrder}" type="Emphasized" press="submitSortList"/>
								</form:fields>
							</form:FormElement>
						</form:formElements>
						<form:title/>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
				</form:layout>
			</form:Form>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>