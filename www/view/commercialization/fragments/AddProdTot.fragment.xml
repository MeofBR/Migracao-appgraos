<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form"
	xmlns:custom="com.sap.build.standard.brfAppDeGraosModoEditar.controls">
	<Dialog showHeader="true" title="{i18n>titleAddProdTotal}" type="Standard">
		<content>
			<Panel width="auto">
				<form:SimpleForm class="simpleFormCommerc" id="commercializationProdKeysForm" editable="true" maxContainerCols="1">
					<form:content>
						<Label text="{i18n>labelProdTotal}" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
						<Input placeholder="{i18n>placeEnterProdTotal}" name="HCP_TOTAL_CROP_TRACK_CLONE"
							value="{ path: 'addProdTotalModel>/HCP_TOTAL_CROP_TRACK_CLONE' , type: 'sap.ui.model.type.Float', formatOptions: { groupingEnabled: true, groupingSeparator: '.', decimalSeparator: ',', maxFractionDigits: 2 }}"
							type="Tel" showValueHelp="false" enabled="true" required="true" visible="true" width="100%" valueHelpOnly="false" maxLength="0"
							change="_valideInputQuantidade" liveChange="_valideInputQuantidade"/>
					</form:content>
				</form:SimpleForm>
			</Panel>
		</content>
		<buttons>
			<Button text="{i18n>buttonCancel}" press="onCancelDialogPressed" visible="true" type="Transparent"/>
			<Button text="{i18n>buttonConfirm}" press="onConfirmProdTotal" type="Emphasized" iconFirst="true" width="auto"
				enabled="{= ${addProdTotalModel>/HCP_TOTAL_CROP_TRACK_CLONE} === 0 ? false : true }" visible="true" iconDensityAware="false"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>