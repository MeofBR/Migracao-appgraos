<mvc:View xmlns:mvc="sap.ui.core.mvc"
	controllerName="com.sap.build.standard.brfAppDeGraosModoEditar.controller.masterData.businessVisit" xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout">
	<Page showHeader="true" title="{i18n>titleBusinessVisit}" showFooter="{indexModel>/isMobile}" showNavButton="true" navButtonPress="backToIndex">
		<headerContent>
			<Button icon="sap-icon://home" tooltip="Home" press="_onHome" visible="true"/>
		</headerContent>
		<content>
			<Table id="table" width="auto"
				items="{path:'/Business_Visit', sorter: { path: 'HCP_DATE',descending: true},parameters: { expand: 'Ranking_Add,Ranking_Add/Ranking_Name' }}"
				noDataText="{i18n>noDataText}" mode="None" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true"
				class="sapUiResponsiveMargin">
				<infoToolbar>
					<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
						<content>
							<Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</content>
					</Toolbar>
				</infoToolbar>
				<headerToolbar>
					<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
						<content>
							<ToolbarSpacer width=""/>
							<OverflowToolbarButton text="Filter" press="filterButtonPressed" type="Transparent" icon="sap-icon://filter" iconFirst="true" width="auto"
								enabled="true" visible="true" iconDensityAware="false"/>
							<OverflowToolbarButton text="Sort" type="Emphasized" icon="sap-icon://add" iconFirst="true" width="auto" enabled="true" visible="true"
								iconDensityAware="false" press="_openDialogRegion"/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="15%" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textMonth}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="15%" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>texYear}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="50%" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textRanking}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="20%" hAlign="Center" vAlign="Top" minScreenWidth="Phone" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textActions}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Active">
						<cells>
							<Label text="{path: 'HCP_DATE', formatter: '.formatter.getMonth'}" design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"
								visible="true"/>
							<Label text="{path: 'HCP_DATE', formatter: '.formatter.getYear'}" design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"
								visible="true"/>
							<Label text="{path: 'Ranking_Add', formatter: '.formatter.concatRankings'}" design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"
								visible="true"/>
							<VBox class="displayBlock">
								<!--<Button text="{i18n>inactivate}" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"-->
								<!--	press="_onDeleteButton"/>-->
								<Button text="{i18n>edit}" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
									press="_oEditPress"/>
							</VBox>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<OverflowToolbar id="otbFooter">
				<ToolbarSpacer/>
				<MessageStrip class="sapUiTinyMarginEnd" text="Ultima atualização {indexModel>/lastUpdate}" showIcon="true"></MessageStrip>
				<Button type="Emphasized" icon="sap-icon://synchronize" press="refreshData">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow"/></layoutData>
				</Button>
			</OverflowToolbar>
		</footer>
		<headerContent/>
		<subHeader/>
		<customHeader/>
	</Page>
</mvc:View>