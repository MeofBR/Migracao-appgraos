<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.brfAppDeGraosModoEditar.controller.offerMap.ConsultOfferMap"
	xmlns="sap.m">
	<Page title="{i18n>textConsultOfferMap}" showNavButton="true" navButtonPress="onCancelPress" showFooter="true">
		<headerContent>
			<Button class="button_blue" icon="sap-icon://home" tooltip="Home" press="_onHome" visible="true"/>
		</headerContent>
		<content>
			<Table width="auto" showSeparators="All" growing="true" growingThreshold="5" growingScrollToLoad="true" class="sapUiResponsiveMargin"
				id="table"
				items="{ path:'filterTableOffer>/ItemOffeMap', sorter : [{ path:'filterTableOffer>HCP_WERKS' , descending:false, group: true } , { path:'filterTableOffer>HCP_CREATED_AT' , descending:true } ], groupHeaderFactory: '.getGroupHeader' }">
				<infoToolbar>
					<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
						<content>
							<Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</content>
					</Toolbar>
				</infoToolbar> 
				<headerToolbar> 
					<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
						<content>
							<Title text="{i18n>textOfferMap}({filterTableOffer>/count})" titleStyle="Auto" width="auto" textAlign="Begin" visible="true"
								wrapping="false"/>
							<ToolbarSpacer/> 
							<OverflowToolbarButton text="Sort" press="sortButtonPressed" type="Transparent" icon="sap-icon://sort" iconFirst="true" width="100%"
								enabled="true" visible="true" iconDensityAware="false"/>
							<!--<OverflowToolbarButton text="Filter" press="filterButtonPressed" type="Transparent" icon="sap-icon://filter" iconFirst="true" width="auto"-->
							<!--	enabled="true" visible="true" iconDensityAware="false"/>-->
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="60px" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textOfferNumber}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="190px" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textMaterial}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="190px" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="Fornecedor/Prospect" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>	
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textQuantity}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textBrf}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textFinalOffer}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="60px" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textInco}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textDateDelivery}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="190px" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textPurchGroup}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textStatus}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
						<header>
							<Text text="{i18n>textDateCreation}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false"
						visible="{path:'filterTableOffer>/yesVisible'}">
						<header>
							<Text text="{i18n>textCancOffer}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"
								visible="{path:'filterTableOffer>/yesVisible'}"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Desktop" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false"
						visible="{path:'filterTableOffer>/yesVisible'}">
						<header>
							<!--removido provisoriamente o visible {path:'filterTableOffer>/yesVisible'}-->
							<Text text="{i18n>buttonRequestPO}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"
								visible="{path:'filterTableOffer>/yesVisible'}"/>
						</header>
						<footer/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Active" press="_onRowPress">
						<cells>
							<Text text="{path:'filterTableOffer>HCP_OFFER_ID'}" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"></Text>
							<ObjectIdentifier title="{path: 'filterTableOffer>MAKTX'}"/>
							<Text
								text="{path:'filterTableOffer>HCP_PROVIDER_DESC', type: 'sap.ui.model.type.String'}"
								maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"></Text>
							<Text
								text="{path:'filterTableOffer>HCP_VOLUME', type: 'sap.ui.model.type.Float', formatOptions: { groupingEnabled: true, groupingSeparator: '.', decimalSeparator: ',', maxFractionDigits: 2 }}"
								maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"></Text>
							<Text
								text="{path:'filterTableOffer>HCP_PRICE_BRF', type: 'sap.ui.model.type.Float', formatOptions: { groupingEnabled: true, groupingSeparator: '.', decimalSeparator: ',', maxFractionDigits: 2 }}"
								maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"></Text>
							<Text
								text="{= (${path:'filterTableOffer>HCP_INCOTERM'} === 'CIF' || ${path:'filterTableOffer>HCP_INCOTERM'} === 'CPT') ? ${path:'filterTableOffer>HCP_PRICE_OFFER', type: 'sap.ui.model.type.Float', formatOptions: { groupingEnabled: true, groupingSeparator: '.', decimalSeparator: ',', maxFractionDigits: 2 }} : ${path:'filterTableOffer>HCP_PRICE_FINAL', type: 'sap.ui.model.type.Float', formatOptions: { groupingEnabled: true, groupingSeparator: '.', decimalSeparator: ',', maxFractionDigits: 2 }} }"
								maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"></Text>
							<Text text="{ path: 'filterTableOffer>HCP_INCOTERM'}" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							<Text text="{path:'filterTableOffer>DT_DELIVERY'}" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"></Text>
							<ObjectIdentifier title="{path: 'filterTableOffer>EKNAM'}"/>
							<Text text="{path:'filterTableOffer>HCP_STATES_OFFER'}" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"
								visible="true"></Text>
							<Text
								text="{ path: 'filterTableOffer>HCP_CREATED_AT', type: 'sap.ui.model.type.DateTime', formatOptions: { style: 'full', UTC: false, pattern: 'dd/MM/yyyy HH:mm:ss' } }" textDirection="Inherit"/>
							<Button visible="{path:'filterTableOffer>/yesVisible'}" width="100%" text="{path:'filterTableOffer>TEXT_BUTTON_01'}" type="Reject"
								iconDensityAware="false" enabled="{path:'filterTableOffer>cancelOffer'}" iconFirst="true" press="_onCancelOfferButton"/>
							<!--removido provisoriamente o visible {path:'filterTableOffer>/yesVisible'}-->
							<Button visible="{path:'filterTableOffer>/yesVisible'}" width="100%" text="{i18n>buttonRequestPO}" type="Default" iconDensityAware="false"
								enabled="{path:'filterTableOffer>purchaseOffer'}" iconFirst="true" press="_onPurchaseButton"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>